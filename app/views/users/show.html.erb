      <div class="row py-lg-5 col-12 col-lg-6">

<%= turbo_frame_tag :user_profile do %>
          <div class="card" style="width: 100%;">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <h5 class="mb-1 card-title"><%= @user.first_name %> <%= @user.last_name %></h5>
                <% if @user.specialist_ad.present? %>
                  <small class="text-muted"><%= time_ago_in_words(@user.specialist_ad.created_at) %> ago</small>
                <% else %>
                  <small class="text-muted">Not available</small>
                <% end %>
              </div>
              <p class="card-text"><%= @user.description %></p>
              <% if @user.specialist_ad.present? %>
                <small class="text-muted">ok</small>
              <% else %>
                <small class="text-muted">No details available</small>
              <% end %>
                <a href="<%= @user.specialist_ad&.portfolio_url %>" class="card-link">Portfolio</a>
            </div>
    </section>
<% end %>
</div>