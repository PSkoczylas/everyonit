<main>
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Twoje ogłoszenie:</h1>
        <%= form_for @advertisement, url: create_or_update_specialist_ads_path do |f| %>
          <div class="form-group">
            <%= f.label :title, "Tytuł" %>
            <%= f.text_field :title, class: 'form-control', placeholder: "Podaj tytuł ogłoszenia..." %>
          </div>

          <div class="form-group">
            <%= f.label :description, "Opis" %>
            <%= f.text_area :description, class: 'form-control', placeholder: "Podaj opis ogłoszenia..." %>
          </div>

          <%= f.submit "Zapisz", class: "btn btn-primary" %>
        <% end %>

        <p class="mt-4">
          <a href="<%= specialist_ads_path %>" class="btn btn-secondary my-2">Powrót do listy</a>
        </p>
      </div>
    </div>
  </section>
</main>