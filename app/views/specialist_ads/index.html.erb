<main>
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Osoby chętne na nową pracę w IT:</h1>
        <p class="lead text-muted">
          <div class="list-group">
          <% @users.each do |user| %>
            <%= link_to user, class:"list-group-item list-group-item-action flex-column align-items-start" do %>
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= user.first_name %> <%= user.last_name %></h5>
                <small>3 days ago</small>
              </div>
              <p class="mb-1"><%= user.specialist_ad&.description || user.description %></p>
              <small>ok</small>
            <% end %>
        <% end %>
          </div>
        </p>
        <p>
        <% if current_user.specialist_ad.present? %>
          <%= link_to "Edytuj własne ogłoszenie", edit_specialist_ad_path(current_user.specialist_ad), class: "btn btn-primary my-2" %>
        <% else %>
          <%= link_to "Dodaj własne ogłoszenie", new_specialist_ad_path, class: "btn btn-primary my-2" %>
        <% end %>
          <a href="#" class="btn btn-secondary my-2">Secondary action</a>
        </p>
      </div>
    </div>
  </section>
</main>