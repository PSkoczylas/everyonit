<main class="container">
  <section class="py-5">
    <div class="row py-lg-5">
      <!-- Lista osób - zawsze wyświetlana -->
      <div class="col-12 col-lg-6">
        <h1 class="fw-light text-center">Osoby chętne na nową pracę w IT:</h1>
        <div class="list-group">
          <% @users.each do |user| %>
            <%= link_to user, class: "list-group-item list-group-item-action flex-column align-items-start", data: { turbo_frame: "user_profile" } do %>
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= user.first_name %> <%= user.last_name %></h5>
                <small><%= time_ago_in_words(user.created_at) %> ago</small>
              </div>
              <div class="d-flex w-100 justify-content-between">
                <p class="mb-1"><%= user.description %></p>
              </div>
              <p class="mb-1"><%= user.specialist_ad&.description %></p>
              <small><%= user.specialist_ad&.portfolio_url %></small>
            <% end %>
          <% end %>
        </div>
        <!-- Przyciski wyśrodkowane -->
        <div class="text-center mt-4">
          <% if current_user&.specialist_ad.present? %>
            <%= link_to "Edytuj własne ogłoszenie", edit_specialist_ad_path(current_user.specialist_ad), class: "btn btn-primary my-2", data: { turbo_frame: "_top" } %>
          <% else %>
            <%= link_to "Dodaj własne ogłoszenie", new_specialist_ad_path, class: "btn btn-primary my-2", data: { turbo_frame: "_top" } %>
          <% end %>
            <a href="#" class="btn btn-secondary my-2">Secondary action</a>
        </div>
      </div>

      <!-- Profil ostatniej osoby - obszar na Turbo Frame -->
      <div class="col-lg-6 d-none d-lg-block">
        <h1 class="fw-light text-center">Profil osoby:</h1>
        <%= turbo_frame_tag 'user_profile' do %>
         <!-- Profil ostatniej osoby -->
        <% last_user = @users.last %>
        <div class="card" style="width: 100%;">
          <div class="card-body">
            <h5 class="card-title"><%= last_user.first_name %> <%= last_user.last_name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= last_user.specialist_ad&.description %></h6>
            <p class="card-text"><%= last_user.description %></p>
            <a href="<%= last_user.specialist_ad&.portfolio_url %>" class="card-link">Portfolio</a>
          </div>
        </div>
      </div>
          <%# Domyślna treść lub pusty element, który zostanie zastąpiony %>
        <% end %>
      </div>
    </div>
  </section>
</main>