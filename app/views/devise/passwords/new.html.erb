<section class="py-5">
  <div class="py-lg-3">
    <h2>Forgot your password?</h2>
    <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-inputs">
        <%= f.email_field :email, label: "Email address:", required: true, autofocus: true, floating: true, autocomplete: "off" %>
        <div class="actions mt-3 mb-2">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</section>
