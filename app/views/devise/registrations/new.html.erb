<section class="py-5">
  <div class="py-lg-3">
    <h2>Sign up</h2>
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.email_field :email, label: "Email address:", required: true, autofocus: true, floating: true %>
        <%= f.password_field :password, label: "Password:", floating: true, required: true %>
        <%= f.password_field :password_confirmation, label: "Password confirmation:", floating: true, required: true %>
        <%= f.text_field :first_name, label: "First name:", floating: true, required: true, autofocus: true %>
        <%= f.text_field :last_name, label: "Last name:", floating: true, required: true, autofocus: true %>
        <%= f.submit "Sign up", class: 'btn btn-primary actions mt-2 mb-2'%>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </section>
</div>

