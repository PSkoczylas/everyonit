<section class="py-5">
  <div class="py-lg-3">

<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="form-inputs">
    <%= f.email_field :email, label: "Email address:", autofocus: true, floating: true %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", label: "Password:", floating: true, autofocus: true %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", label: "Password confirmation:", floating: true, autofocus: true %>
    <%= f.password_field :current_password, autocomplete: "current-password", label: "Current password:", floating: true, autofocus: true%>
    <%= f.submit "Update", class: 'btn btn-primary actions mt-2 mb-2'%>
  </div>
<% end %>

<%= link_to "Back", :back %>
  </div>
</section>
